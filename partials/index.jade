doctype html
html
    head
    body(ng-app='moviedb', ng-controller='MainController as mc')
        div#search
            input(placeholder='Search' ng-model='mc.query' ng-change='mc.search(mc.query)')
            ul#results
                li(ng-repeat='movie in mc.results') {{ movie.title }}
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
        script(src='js/app.js')
        script(src='js/controllers/main.js')